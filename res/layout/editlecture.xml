<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<CheckBox android:id="@+id/mon" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="M"
				android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
				android:layout_weight="1">
			</CheckBox>
			<CheckBox android:id="@+id/tue" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="T"
				android:layout_alignParentTop="true" android:layout_toRightOf="@+id/mon"
				android:layout_weight="1">
			</CheckBox>
			<CheckBox android:id="@+id/wed" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="W"
				android:layout_alignParentTop="true" android:layout_toRightOf="@+id/tue"
				android:layout_weight="1">
			</CheckBox>
			<CheckBox android:id="@+id/thr" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="R"
				android:layout_alignParentTop="true" android:layout_toRightOf="@+id/wed"
				android:layout_weight="1">
			</CheckBox>
			<CheckBox android:id="@+id/fri" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="F"
				android:layout_alignParentTop="true" android:layout_toRightOf="@+id/thr"
				android:layout_weight="1">
			</CheckBox>

		</LinearLayout>

		<EditText android:id="@+id/course" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Course"
			android:textSize="18sp">
		</EditText>
		<EditText android:id="@+id/professor" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Professor"
			android:textSize="18sp">
		</EditText>
		<EditText android:id="@+id/section" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Section"
			android:textSize="18sp">
		</EditText>
		<EditText android:id="@+id/crn" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="CRN"
			android:textSize="18sp">
		</EditText>

		<Spinner android:id="@+id/typeSpinner" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:drawSelectorOnTop="true"
			android:prompt="@string/type_prompt">
		</Spinner>
		<Spinner android:id="@+id/startHoursSpinner"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" android:prompt="@string/start_prompt">
		</Spinner>
		<Spinner android:id="@+id/endHoursSpinner"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" android:prompt="@string/end_prompt">
		</Spinner>
		<Button android:id="@+id/widget54" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="Save"
			android:onClick="save">
		</Button>
	</LinearLayout>
</ScrollView>